@model RunningClub.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Login";
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card rounded-3 shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">Login</h2>
        <form asp-action="Login" asp-controller="Account" novalidate>
            @if (ViewData.ModelState.ContainsKey("LoginAttempt")){
                <div class="mb-3 rounded-3 p-4 alert-danger">
                    <span><b>@ViewData.ModelState["LoginAttempt"].Errors[0].ErrorMessage</b></span>
                </div>
            }
            <!-- Username/Email Field -->
            <div class="form-floating mb-3">
                <input type="email" class="form-control" asp-for="Email">
                <label asp-for="Email"></label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="form-control" asp-for="Password" required>
                <label asp-for="Password"></label>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <!-- Remember Me Checkbox -->
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="RememberMe">
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>
        </form>

        <!-- Additional Links -->
        <div class="mt-3 text-center">
            <a asp-action="Register" asp-controller="Account" class="text-decoration-none">Create an account</a>
        </div>
    </div>
</div>



