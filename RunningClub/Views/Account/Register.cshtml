@model RunningClub.ViewModels.RegisterViewModel;
@{
    ViewData["Title"] = "Register";
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card rounded-3 shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">Register</h2>
        <form class="row g-3" asp-action="Register" asp-controller="Account" novalidate>
            @if (ViewData.ModelState.ContainsKey("RegisterAttempt")){
                <div class="col-md-12 mb-3 rounded-3 p-4 alert-danger">
                    <span><b>@ViewData.ModelState["RegisterAttempt"].Errors[0].ErrorMessage</b></span>
                </div>
            }

            <div class="form-floating col-md-6 mb-3">
                <input class="form-control" asp-for="FName">
                <label asp-for="FName"></label>
                <span class="text-danger" asp-validation-for="FName"></span>
            </div>
            <div class="form-floating col-md-6 mb-3">
                <input class="form-control" asp-for="LName">
                <label asp-for="LName"></label>
                <span class="text-danger" asp-validation-for="LName"></span>
            </div>
            <div class="form-floating col-md-12 mb-3">
                <input class="form-control" asp-for="UserName">
                <label asp-for="UserName"></label>
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-floating col-md-12 mb-3">
                <input class="form-control" asp-for="Email">
                <label asp-for="Email"></label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-floating col-md-12 mb-3">
                <input class="form-control" asp-for="Password">
                <label asp-for="Password"></label>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-floating col-md-12 mb-3">
                <input class="form-control" asp-for="ConfirmPassword" onchange="onConfirmPasswordChange()">
                <label asp-for="ConfirmPassword"></label>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Register</button>
            </div>
            <div class="mt-3 text-center">
                <span class="text-secondary">Have an account? <a asp-action="Login" asp-controller="Account" class="text-decoration-none">Login</a></span>
            </div>
        </form>
    </div>
</div>