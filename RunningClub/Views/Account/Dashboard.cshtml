@model AppUser
@{
    ViewData["Title"] = "Dashboard";
}


<div class="row mt-3">
    <!-- Left Column: List of Cards -->
    <div class="col-md-9">
        <nav class="mb-5 navbar custom-navbar sticky-top bg-white shadow d-flex justify-content-between align-items-center" style="top:56px">
            <div class="w-100 d-flex justify-content-center flex-grow-1">
                <a href="#" class="nav-link text-black mx-5">Option</a>
                <a href="#" class="nav-link text-black mx-5">Option</a>
                <a href="#" class="nav-link text-black mx-5">Option</a>
                <a href="#" class="nav-link text-black mx-5">Option</a>
            </div>
        </nav>
        @* <h4 class="mt-3 mb-3 text-center">Your Cards</h4> *@
        <div class="card p-3">
            <div class="card mb-3">
                <div class="row g-0">
                    <!-- Image on the left -->
                    <div class="col-md-4">
                        <img src="/uploads/race/defaultImage.jpg" class="img-fluid rounded-start" alt="Placeholder Image">
                    </div>
                    <!-- Card body on the right -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Card Title</h5>
                            <p class="card-text">
                                This is a card with an image on the left and content on the right.
                                It can display additional information, descriptions, or actions.
                            </p>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                            <a href="#" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Card Title 2</h5>
                    <p class="card-text">Another example text for the second card.</p>
                    <a href="#" class="btn btn-primary btn-sm">View</a>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Card Title 3</h5>
                    <p class="card-text">Yet another example text for this card.</p>
                    <a href="#" class="btn btn-primary btn-sm">View</a>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Card Title 1</h5>
                    <p class="card-text">Some quick example text about this card.</p>
                    <a href="#" class="btn btn-primary btn-sm">View</a>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Card Title 2</h5>
                    <p class="card-text">Another example text for the second card.</p>
                    <a href="#" class="btn btn-primary btn-sm">View</a>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Card Title 3</h5>
                    <p class="card-text">Yet another example text for this card.</p>
                    <a href="#" class="btn btn-primary btn-sm">View</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: Big Account Info Card -->
    <div class="col-md-3 p-3">
        <div class="card w-25 account-info-card shadow">
            <div class="card-body d-flex flex-column justify-content-center">
                <h2 class="card-title text-center mb-4">@Model.UserName</h2>
                <p><strong>Name:</strong> @(Model.FName+" "+Model.LName)</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Mileage:</strong> @Model.Mileage</p>
                <a class="btn btn-primary mt-auto w-50 mx-auto">Edit Profile</a>
            </div>
        </div>
    </div>
</div>


