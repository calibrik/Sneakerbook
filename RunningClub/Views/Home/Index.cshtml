@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">This is site with running clubs</h1>
        <p class="col-md-8 fs-4">There are a bunch of running clubs here y'know</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register" type="button">Sign up</a>
            <a class="btn btn-secondary btn-lg" asp-controller="Account" asp-action="Login" type="button">Login</a>
        }
        else
        {
            <a class="btn btn-primary btn-lg" asp-controller="Dashboard" asp-action="Index" type="button">Dashboard</a>
        }
    </div>
</div>
<div class="container mt-5">
    <!-- Carousel -->
    <div id="cardCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Carousel Items -->
        <div class="carousel-inner">
            <!-- Card 1 -->
            <div class="carousel-item active">
                <div class="card w-50 mx-auto">
                    <img src="/uploads/images/defaultImage.jpg" class="card-img-top" alt="Card 1">
                    <div class="card-body">
                        <h5 class="card-title">Explore Clubs!</h5>
                        <p class="card-text">Join various clubs based on your location and preferences!</p>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="carousel-item">
                <div class="card w-50 mx-auto">
                    <img src="/uploads/images/defaultImage.jpg" class="card-img-top" alt="Card 2">
                    <div class="card-body">
                        <h5 class="card-title">Complete Races!</h5>
                        <p class="card-text">Complete races with the clubs!</p>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="carousel-item">
                <div class="card w-50 mx-auto">
                    <img src="/uploads/images/defaultImage.jpg" class="card-img-top" alt="Card 3">
                    <div class="card-body">
                        <h5 class="card-title">Create your own clubs!</h5>
                        <p class="card-text">Didn't find club you like? Create your own!</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" style="background-color: #9c7834" type="button" data-bs-target="#cardCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" style="background-color: #9c7834" type="button" data-bs-target="#cardCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>