@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">This is site with running clubs</h1>
        <p class="col-md-8 fs-4">There are a bunch of running clubs here y'know</p>
        <a class="btn btn-primary btn-lg" type="button">Sign up</a>
        <a class="btn btn-secondary btn-lg" asp-controller="Club" asp-action="Index" type="button">Login</a>
    </div>
</div>
<div class="container mt-5">
    <!-- Carousel -->
    <div id="cardCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Carousel Items -->
        <div class="carousel-inner">
            <!-- Card 1 -->
            <div class="carousel-item active">
                <div class="card w-50 mx-auto">
                    <img src="https://via.placeholder.com/300x150" class="card-img-top" alt="Card 1">
                    <div class="card-body">
                        <h5 class="card-title">Card 1</h5>
                        <p class="card-text">This is the content of Card 1. Add your details here.</p>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="carousel-item">
                <div class="card w-50 mx-auto">
                    <img src="https://via.placeholder.com/300x150" class="card-img-top" alt="Card 2">
                    <div class="card-body">
                        <h5 class="card-title">Card 2</h5>
                        <p class="card-text">This is the content of Card 2. Add your details here.</p>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="carousel-item">
                <div class="card w-50 mx-auto">
                    <img src="https://via.placeholder.com/300x150" class="card-img-top" alt="Card 3">
                    <div class="card-body">
                        <h5 class="card-title">Card 3</h5>
                        <p class="card-text">This is the content of Card 3. Add your details here.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" style="background-color: black" type="button" data-bs-target="#cardCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" style="background-color: black" type="button" data-bs-target="#cardCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>