@using RunningClub.Misc
@model RunningClub.ViewModels.DetailRaceViewModel
@{
    ViewData["Title"] = Model.Title;
}
<div class="row">
    <div class="container mt-3 col-md-6">
        <a asp-action="Index" class="btn btn-secondary">
            ← Back
        </a>
    </div>
    
    <div class="container mt-3 d-flex justify-content-end  col-md-6">
        @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
        {
            <a asp-action="Edit" asp-controller="Race" asp-route-id="@Model.Id" style="width: 15%" class="btn btn-primary">
                Edit
            </a>
        }
    </div>
</div>

<div class="container my-5">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <!-- Club Detail Section -->
                @{
                    <div class="col-md-6">
                        <!-- Club Image -->
                        <div class="d-flex justify-content-center">
                            <div id="spinner" class="spinner-border m-5" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                        <img id="image" style="display: none" src=@Model.Image class="img-fluid" alt="Club Image" onload="onImageLoad()">
                    </div>
                    <div class="col-md-6">
                        <!-- Club Information -->
                        <h1 class="display-4">@Model.Title</h1>
                        <h4 class="text-muted">Category: <span class="badge bg-primary">@Model.Category</span></h4>
                        <p class="card-text"><strong>Address: </strong> @Model.Address.Country, @Model.Address.City, @Model.Address.Street </p>
                        <p class="card-text"><strong>Description: </strong>@Model.Description</p>
                        <p class="card-text"><strong>Number of Participants: </strong>0/@Model.MaxMembersNumber</p>
                        <p class="card-text"><strong>Created by: </strong><a asp-controller="Dashboard" asp-action="Index" asp-route-userId="@Model.Admin.Id" class="text-decoration-none">@Model.Admin.UserName</a></p>
                        <p class="card-text"><strong>Hosting Club: </strong><a asp-action="Detail" asp-controller="Club" asp-route-id="@Model.Club.Id" class="link-info">@Model.Club.Title</a></p>

                        <!-- Button or any additional info -->
                        @if (!Model.IsJoined)
                        {
                            <form method="post" asp-action="Join">
                                <input hidden asp-for="Id"/>
                                <button type="submit" class="btn btn-outline-primary mt-auto">Join</button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-action="Leave">
                                <input hidden asp-for="Id"/>
                                <button type="submit" class="btn btn-outline-secondary mt-auto">Cancel</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="mt-3 row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center mb-3">Members</h3>
                <ul class="list-group">
                    @if (Model.Members.Count == 0)
                    {
                        <p class="text-muted text-center">No members joined this club yet.</p>
                    }
                    @foreach (AppUser user in Model.Members)
                    {
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-6 d-flex align-content-center">
                                    <a asp-controller="Dashboard" asp-action="Index" asp-route-userId="@user.Id" class="text-decoration-none">
                                        @user.UserName
                                    </a>
                                </div>
                                @if (user.Id == Model.Admin.Id)
                                {
                                    <div class="col-md-6 d-flex align-content-center justify-content-end">
                                        <p><strong class="text-danger">Admin</strong></p>
                                    </div>
                                }
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>