@model RunningClub.ViewModels.EditClubViewModel
@{
    ViewData["Title"] = "Edit Club";
}
<div class="container mt-3">
    <a onclick="goBack()" class="btn btn-secondary">
        ← Back
    </a>
</div>

<h2 class="text-center mb-4">Edit Club</h2>
<div class="outer-container">
    <form class="row g-3 needs-validation" method="post" asp-controller="Club" asp-action="Edit" enctype="multipart/form-data">
        <input hidden asp-for="Id"/>
        <div class="col-md-12 form-floating mb-3">
            <input type="text" class="form-control" asp-for="@Model.Title" placeholder="" required/>
            <label for="floatingInput">Title</label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-12 form-floating mb-3">
            <textarea class="form-control" asp-for="@Model.Description" placeholder="" style="height: 150px"></textarea>
            <label for="floatingInput">Description</label>
        </div>
        <div class="col-md-3 form-floating mb-3">
            <input type="text" class="form-control" asp-for="@Model.Address.Country" placeholder="" required/>
            <label for="floatingInput">Country</label>
            <span asp-validation-for="Address.Country" class="text-danger"></span>
        </div>
        <div class="col-md-3 form-floating mb-3">
            <input type="text" class="form-control" asp-for="@Model.Address.City" placeholder="" required/>
            <label for="floatingInput">City</label>
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating mb-3">
            <input type="text" class="form-control" asp-for="@Model.Address.Street" placeholder="" required/>
            <label for="floatingInput">Street</label>
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <select class="form-select" asp-for="@Model.Category" aria-label="Default select example" required>
                <option selected disabled value="">Choose the category</option>
                @{
                    foreach (ClubCategory category in Enum.GetValues(typeof(ClubCategory)))
                    {
                        <option value=@category>@category</option>
                    }
                }
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="col-md-9 mb-3">
            <input type="file" class="form-control" id="imageInput" asp-for="@Model.Image" disabled/>
            <div class="row">
                <div class="col-12">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <input type="checkbox" id="checkboxDisabler" asp-for="IsImageChanged" class="form-check-input" onchange="DisableOnChange('imageInput','checkboxDisabler')" />
                    <label class="form-check-label" for="checkboxDisabler">Change image</label>
                </div>
            </div>
        </div>
        <div class="col-md-12 form-floating mb-3 d-flex justify-content-center">
            <button class="btn-primary w-50 btn-lg rounded-2" type="submit">Save changes</button>
        </div>
    </form>
</div>