@model RunningClub.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-3">
    <a onclick="goBack()" class="btn btn-secondary">
        ← Back
    </a>
</div>
<div class="container d-flex justify-content-center align-items-center" style="height: 75vh">
    <div class="card rounded-3 shadow-lg p-4"  style="width: 100%; max-width: 400px;">
        <form class="row g-3" asp-action="ChangePassword" asp-controller="Dashboard" novalidate>
            @if (ViewData.ModelState.ContainsKey("ChangePasswordAttempt")){
                <div class="mb-3 rounded-3 p-4 alert-danger">
                    <span><b>@ViewData.ModelState["ChangePasswordAttempt"].Errors[0].ErrorMessage</b></span>
                </div>
            }
            <div class="form-floating col-md-12 mb-3">
                <input class="form-control" asp-for="OldPassword">
                <label asp-for="OldPassword"></label>
                <span class="text-danger" asp-validation-for="OldPassword"></span>
            </div>
            <div class="form-floating col-md-12 mb-3">
                <input class="form-control" asp-for="NewPassword">
                <label asp-for="NewPassword"></label>
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>
            <div class="form-floating col-md-12 mb-3">
                <input class="form-control" asp-for="ConfirmNewPassword" onchange="onConfirmPasswordChange()">
                <label asp-for="ConfirmNewPassword"></label>
                <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Save password</button>
            </div>
        </form>
    </div>
</div>