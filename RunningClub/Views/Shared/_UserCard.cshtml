@using RunningClub.Misc
@model RunningClub.ViewModels.DashboardViewModel

<div class="card w-25 account-info-card shadow d-flex flex-column">
    <div class="card-body d-flex flex-column">
        <h2 class="card-title text-center mb-4">@Model.Username</h2>
        <p><strong>Name:</strong> @(Model.FName + " " + Model.LName)</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Mileage:</strong> @Model.Mileage</p>
        @if (User.Identity.IsAuthenticated && User.GetUserId() == Model.Id && User.IsInRole(UserRoles.Admin))
        {
            <p><strong class="text-danger">Admin</strong></p>
        }
        @if (User.Identity.IsAuthenticated && User.GetUserId() == Model.Id)
        {
            <a asp-action="ChangePassword" asp-controller="Dashboard" class="mt-3 btn btn-outline-secondary w-25">Change Password</a>
            <div class="mt-auto d-flex justify-content-center">
                <a asp-action="Edit" asp-controller="Dashboard" class="btn btn-primary w-50">Edit Profile</a>
            </div>
        }
    </div>
</div>
